{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc-13 生成活动文件",
            "command": "/usr/bin/gcc-13",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/main.c", 
                "${fileDirname}/bubbleSort.c",
                "${fileDirname}/heapSort.c",
                "${fileDirname}/fibSort.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}